<h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット　<%= link_to "退出する", user_path(@user), class: "btn btn-default" %>
</h1>

<div class="message" style="width: 400px;">
  <% @messages.each do |message| %>
    <% if message.user_id == current_user.id %>
      <p style="text-align: right;"><%= message.message %></p>
    <% else %>
      <p style="text-align: left;"><%= message.message %></p>
    <% end %>
  <% end %>
</div>

<%= form_with model: @message, data: {remote: true} do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
<% end %>